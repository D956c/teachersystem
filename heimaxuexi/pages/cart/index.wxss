page{
  background: #f5f5f5;
}
.item {
    top: 500rpx;
    margin-top: 8rpx;
    /* margin-left: 20rpx; */
    /* padding-top: -900rpx; */
    left: 80%;
    width: 100%;
    height: 250rpx;
    background: #fff;
    border-bottom: 4px dotted #f3f5f3f3;
  }
  .order-num{
    position: absolute;
    margin-top: 1rpx;
    left: 3%;
    width: 40%;
    height: 80rpx;
    font-size: 15px;
    text-align: left;
    color: rgb(241, 126, 19);
  }
  .course{
    position: absolute;
    margin-top: 1rpx;
    left: 22%;
    width: 70%;
    height: 80rpx;
    font-size: 16px;
    color: black;
  }
  .content{
    display: -webkit-box;
    position: absolute;
    margin-top: 67rpx;
    left: 3%;
    width: 78%;
    height: 160rpx;
    max-width: 78%;
    font-size: 13px;
    color: rgb(151, 150, 150);
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .line{
    position: absolute;
    margin-top: 55rpx;
    background: #E0E3DA;
    width: 74%;
    height: 3rpx;
  }
  .new{
    display: flex;
    align-items: center;
    position: absolute;
    margin-top: 20rpx;
    border-radius: 60rpx;
    width: 100rpx;
    height: 50rpx;
    text-align: center;
    justify-content: center;
    background-color: rgb(228, 53, 9);
    left: 80%;
  }
  .newtext{
   color: #fff;
  }
  .ongoing{
    display: flex;
    align-items: center;
    position: absolute;
    margin-top: 20rpx;
    border-radius: 60rpx;
    width: 100rpx;
    height: 50rpx;
    text-align: center;
    justify-content: center;
    background-color: #18be6a;
    left: 80%;
    color:#fff;
  }
  .done{
    display: flex;
    align-items: center;
    position: absolute;
    margin-top: 20rpx;
    border-radius: 60rpx;
    width: 100rpx;
    height: 50rpx;
    text-align: center;
    justify-content: center;
    background-color: #f5f5f5;
    left: 80%;
  }
  .donetext{
    color: #676866;
  }
